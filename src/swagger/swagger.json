{
  "swagger": "2.0",
  "info": {
    "title": "Shop API",
    "description": "API para CRUD de produtos e vendas de uma loja",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/products/": {
      "post": {
        "description": "Endpoint para cadastro de novos produtos. Necessário passar um objeto com o nome do produto, que deve ter um mínimo de 5 caracteres.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Adicionar novo produto",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "ProdutoX"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number",
                  "example": 4
                },
                "name": {
                  "type": "string",
                  "example": "ProdutoX"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'name' is required"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "422": {
            "description": "Invalid value",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'name' length must be at least 5 characters long"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "get": {
        "description": "Endpoint para listar todos os produtos cadastrados. Não é necessário passar nenhum parâmetro.",
        "responses": {
          "200": {
            "description": "Exemplo da estrutura",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "number",
                    "example": 3
                  },
                  "name": {
                    "type": "string",
                    "example": "Escudo do Capitão América"
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/products/search": {
      "get": {
        "description": "Endpoint para buscar um produto a partir de uma consulta específica. Caso nenhum nome seja passado, retorna todos os produtos cadastrados.",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Nome do produto, exemplo: martelo. Parâmetro opcional, retorna todos os produtos quando não passado.",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Exemplo da estrutura",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "number",
                    "example": 1
                  },
                  "name": {
                    "type": "string",
                    "example": "Martelo de Thor"
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "description": "Endpoint para buscar um produto específico a partir de seu id. Espera como parâmetro um id válido cadastrado.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Product id"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number",
                  "example": 3
                },
                "name": {
                  "type": "string",
                  "example": "Escudo do Capitão América"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Product not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "put": {
        "description": "Endpoint para atualizar um produto. Necessário passar o id do produto a ser atualizado e um objeto com o novo nome do produto, que deve ter um mínimo de 5 caracteres.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Product id"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Updating product",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "ProdutoX"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number",
                  "example": 3
                },
                "name": {
                  "type": "string",
                  "example": "Escudo do Lanterna Verde"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'name' is required"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Product not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "422": {
            "description": "Invalid value",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'name' length must be at least 5 characters long"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "delete": {
        "description": "Endpoint para deleção de um produto. Necesário passar o id do produto a ser deletado.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Product id"
          }
        ],
        "responses": {
          "204": {
            "description": "Product deleted"
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Product not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/sales/": {
      "post": {
        "description": "Endpoint para cadastro de novas vendas. Necessário passar um array de um ou mais objetos, com cada objeto contendo o id válido de um produto e uma quantidade maior que zero.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Adicionar nova venda",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "productId": {
                    "type": "number",
                    "example": 2
                  },
                  "quantity": {
                    "type": "number",
                    "example": 5
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number",
                  "example": 3
                },
                "itemsSold": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "productId": {
                        "type": "number",
                        "example": 2
                      },
                      "quantity": {
                        "type": "number",
                        "example": 5
                      }
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'productId'/'quantity' are required"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Product not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "422": {
            "description": "Invalid value",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'quantity' must be greater than or equal to 1"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "get": {
        "description": "Endpoint para listar todas as vendas cadastradas. Não é necessário passar nenhum parâmetro.",
        "responses": {
          "200": {
            "description": "Exemplo da estrutura",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "saleId": {
                    "type": "number",
                    "example": 2
                  },
                  "date": {
                    "type": "string",
                    "example": "2023-08-14T14:08:09.000Z"
                  },
                  "productId": {
                    "type": "number",
                    "example": 3
                  },
                  "quantity": {
                    "type": "number",
                    "example": 15
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/sales/{id}": {
      "get": {
        "description": "Endpoint para buscar uma venda específica a partir de seu id. Espera como parâmetro um id válido cadastrado.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Sale id"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "example": "2023-08-14T14:08:09.000Z"
                  },
                  "productId": {
                    "type": "number",
                    "example": 2
                  },
                  "quantity": {
                    "type": "number",
                    "example": 10
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Sale not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "put": {
        "description": "Endpoint para atualizar uma venda. Necessário passar o id da venda a ser atualizado e um array com um ou mais objetos, cada objeto representando um produto incluso na venda em questão. Os objetos devem conter o id válido de um produto e uma quantidade maior que zero. \n Recomendado consultar a venda antes de atualizar, para construção adequada do array de objetos. Só serão atualizados os produtos cadastrados inicialmente na venda, possíveis elementos excedentes no array não serão incluídos na venda.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Sale id"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Updating sale",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "productId": {
                    "type": "number",
                    "example": 2
                  },
                  "quantity": {
                    "type": "number",
                    "example": 50
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "saleId": {
                  "type": "number",
                  "example": 1
                },
                "itemsUpdated": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "productId": {
                        "type": "number",
                        "example": 2
                      },
                      "quantity": {
                        "type": "number",
                        "example": 50
                      }
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'productId'/'quantity' are required"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Product not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "422": {
            "description": "Invalid value",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "'quantity' must be greater than or equal to 1"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "delete": {
        "description": "Endpoint para deleção de uma venda. Necesário passar o id da venda a ser deletada.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Sale id"
          }
        ],
        "responses": {
          "204": {
            "description": "Sale deleted"
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Sale not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    }
  }
}